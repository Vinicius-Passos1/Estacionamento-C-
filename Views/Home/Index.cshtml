@{
    Layout = null;
    ViewData["Title"] = "Estacionamento Show - Início";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estacionamento-show.css" />
</head>
<body>
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold">Estacionamento Show</h1>
            <p class="lead text-white-50">Organize vagas, veículos e tudo mais com facilidade.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card bg-dark text-white shadow-lg border-0">
                    <div class="card-header text-center">Login</div>
                    <div class="card-body">
                        <form method="post" asp-controller="Account" asp-action="Login">
                            <div class="mb-3">
                                <label for="email" class="form-label">E-mail</label>
                                <input type="email" class="form-control" id="email" name="Email" required />
                            </div>
                            <div class="mb-3">
                                <label for="senha" class="form-label">Senha</label>
                                <input type="password" class="form-control" id="senha" name="Password" required />
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Entrar</button>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-white-50">
                            Não tem uma conta?
                            <a href="/Account/Register" class="text-danger">Cadastre-se</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
